[flake8]
extend-ignore =
    # let black handle this
    E501,
    # http://hexbyteinc.com/ambv-black/#line-breaks--binary-operators
    W503
extend-exclude =
    # No need to traverse our git directory
    .git,
    .mypy_cache,
    .vscode,
    build,
    # There's no value in checking cache directories
    __pycache__,
    # Don't check auto-generated code
    *_ui.py,
